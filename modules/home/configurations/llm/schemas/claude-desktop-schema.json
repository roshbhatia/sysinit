{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Desktop Configuration",
  "description": "Configuration file for Claude Desktop MCP servers",
  "type": "object",
  "properties": {
    "mcpServers": {
      "type": "object",
      "description": "MCP server configurations",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "oneOf": [
            {
              "type": "object",
              "description": "Local MCP server (stdio)",
              "required": ["command", "args"],
              "properties": {
                "command": {
                  "type": "string",
                  "description": "Command to execute"
                },
                "args": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Command arguments"
                },
                "env": {
                  "type": "object",
                  "additionalProperties": { "type": "string" },
                  "description": "Environment variables"
                },
                "description": {
                  "type": "string",
                  "description": "Server description"
                },
                "enabled": {
                  "type": "boolean",
                  "description": "Whether server is enabled",
                  "default": true
                }
              }
            },
            {
              "type": "object",
              "description": "Remote MCP server (HTTP)",
              "required": ["type", "url"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["http"],
                  "description": "Server type"
                },
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "Server URL"
                },
                "description": {
                  "type": "string",
                  "description": "Server description"
                },
                "enabled": {
                  "type": "boolean",
                  "description": "Whether server is enabled",
                  "default": true
                }
              }
            }
          ]
        }
      }
    }
  },
  "required": ["mcpServers"],
  "additionalProperties": false
}
