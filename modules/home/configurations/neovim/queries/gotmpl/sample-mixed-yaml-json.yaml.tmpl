{{/* yaml */}}
apiVersion: v1
kind: ConfigMap
metadata:
  name: example-config
  labels:
    app: demo
    env: {{ .Values.env }}

data:
  raw.json: |
    {{/* json */}}
    {
      "enabled": true,
      "thresholds": [1, 2, 3],
      "nested": {
        "key": "value",
        "dynamic": "{{ .Values.dynamicValue }}"
      }
    }
  raw.yaml: |
    apiVersion: batch/v1
    kind: Job
    metadata:
      name: process-job
    spec:
      template:
        spec:
          containers:
            - name: worker
              image: {{ .Values.image }}
              env:
                - name: MODE
                  value: {{ .Values.mode }}
          restartPolicy: Never
