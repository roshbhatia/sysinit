[
    // Space is neovim leader
    {
        "key": "space",
        "command": "vscode-neovim.send",
        "when": "neovim.mode != 'insert' && !inputFocus && !searchInputBoxFocus && !quickInputFocus && !inQuickOpen && !scmInputFocus && (editorTextFocus || activeEditorGroupEmpty)"
    },
    // Disable tab for copilot suggestions
    {
        "key": "tab",
        "command": "-editor.action.inlineSuggest.commit",
        "when": "inlineSuggestionVisible && !editorTabMovesFocus"
    },
    // Use ctrl+tab instead
    {
        "key": "ctrl+tab",
        "command": "editor.action.inlineSuggest.commit",
        "when": "inlineSuggestionVisible && !editorTabMovesFocus"
    },
    // Sidebar toggles
    {
        "key": "cmd+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "alt+cmd+b", 
        "command": "workbench.action.toggleAuxiliaryBar"
    },
    // Git operations
    {
        "key": "cmd+shift+g",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "alt+cmd+c",
        "command": "git.commitAll"
    },
    {
        "key": "alt+cmd+s",
        "command": "git.stageAll"
    },
    {
        "key": "alt+cmd+z",
        "command": "git.revertSelectedRanges"
    },
    {
        "key": "cmd+k g",
        "command": "github.copilot.generateCommitMessage"
    },
    // File operations
    {
        "key": "f2",
        "command": "renameFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "shift+alt+d",
        "command": "duplicateFile",
        "when": "explorerViewletVisible && filesExplorerFocus"
    },
    // Quick Access
    {
        "key": "cmd+shift+p",
        "command": "workbench.action.showCommands"
    },
    {
        "key": "cmd+p",
        "command": "workbench.action.quickOpen"
    },
    // Copilot & Panel Access 
    {
        "key": "cmd+shift+i",
        "command": "workbench.panel.chat.view.copilot.focus"
    },
    {
        "key": "cmd+shift+o", 
        "command": "workbench.view.outline.focus"
    },
    {
        "key": "cmd+shift+n",
        "command": "workbench.view.extension.snipNotes.focus"
    }
]