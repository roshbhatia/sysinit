[
    // Space is neovim leader
    {
        "key": "space",
        "command": "vscode-neovim.send",
        "when": "neovim.mode != 'insert' && !inputFocus && !searchInputBoxFocus && !quickInputFocus && !inQuickOpen && !scmInputFocus && (editorTextFocus || activeEditorGroupEmpty)"
    },
    // Disable tab for copilot suggestions
    {
        "key": "tab",
        "command": "-editor.action.inlineSuggest.commit",
        "when": "inlineSuggestionVisible && !editorTabMovesFocus"
    },
    // Use ctrl+tab instead
    {
        "key": "ctrl+tab",
        "command": "editor.action.inlineSuggest.commit",
        "when": "inlineSuggestionVisible && !editorTabMovesFocus"
    },
    // Sidebar toggles
    {
        "key": "cmd+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "alt+cmd+b",
        "command": "workbench.action.toggleAuxiliaryBar"
    },
    // Reload window (restarts VSCode and Neovim extension)
    {
        "key": "ctrl+alt+r",
        "command": "workbench.action.reloadWindow",
        "when": "editorTextFocus"
    }
]  